    "openai": "^4.26.0",
    "pdf-parse": "^1.1.1",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
